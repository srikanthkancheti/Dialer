    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
        
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/contact_nameNum_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/call_details_selector" >

        <TextView
            android:id="@+id/call_contact_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:text="name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/call_contact_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/call_contact_name_tv"
            android:layout_below="@+id/call_contact_name_tv"
            android:text="number" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/send_message_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contact_nameNum_relativeLayout"
        android:background="@drawable/call_details_selector" >

        <TextView
            android:id="@+id/Send_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="Send text message"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:textSize="17dp" />
    </RelativeLayout>

